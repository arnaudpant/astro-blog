---
import {type CollectionEntry, getEntry} from "astro:content"
import {Image} from "astro:assets"
import CategoryList from "./CategoryList.astro"

type Props = {
    post: CollectionEntry<"posts">
}

const {post} = Astro.props
const source = await getEntry("sources", post.data.source)
---

<article class="max-w-lg">
    <a
        href={`/blog/${post.slug}`}
        aria-label={`Read more about ${post.data.title}`}
    >
    <div class="pb-2">
        <span class="text-textgreen text-xs">
            {post.data.date}
        </span>
    </div>
        <Image
            src={post.data.image}
            alt={post.data.title}
            width={600}
            height={600 / 1.5}
            format="webp"
            class="rounded-2xl shadow-lg mb-3 aspect-thumbnail object-cover"
        />
        
        <p class="text-title text-2xl mb-5 line-clamp-2 text-left">
            {post.data.title}
        </p>
        <div class="mb-4 border-b-1 border-b-gray-400">
            <CategoryList categories={post.data.categories} />
        </div>
    
    </a>

</article>