---
import {Image} from "astro:assets";
import myImage from '../assets/avatar.png';
---

<header class="flex flex-col justify-between items-center px-24 py-10 max-sm:px-5 max-sm:py-8 max-w-7xl w-full mx-auto bg-primary gap-2">
    <a href="/" class="flex items-center gap-x-4">
        <Image 
            src={myImage}
            alt="portrait en mode manga"
            width={200}
            height={200}
            format="webp"
            class="rounded-full"
        />
    </a>
    <p class="uppercase text-2xl text-[#1F2937] py-4">Le Blog d'un dev React & Astro</p>
    <ul class="flex gap-x-8">
        <li><a href="/" class="text-[#1F2937] font-bold">Home</a></li>
        <!-- <li><a href="/about" class="text-[#1F2937] font-bold">About</a></li> -->
        <li><a href="/blog" class="text-[#1F2937] font-bold">Blog</a></li>
    </ul>
</header>