---
import {type CollectionEntry, getEntry} from "astro:content"
import {Image} from "astro:assets"
import CategoryList from "./CategoryList.astro"

type Props = {
    post: CollectionEntry<"posts">
}

const {post} = Astro.props
const source = await getEntry("sources", post.data.source)
---

<div class="w-full max-w-xl mb-6">
    <a
        href={`/blog/${post.slug}`}
        aria-label={`Read more about ${post.data.title}`}
    >

        <div class="flex flex-col md:flex-row gap-2">
            <div class="pb-2 md:pb-0 md:max-w-[300px]">
                <Image
                src={post.data.image}
                alt={post.data.title}
                width={300}
                height={300 / 1.5}
                format="webp"
                class="rounded-2xl shadow-lg object-cover"
                />
            </div>

            <div class="flex flex-col w-full md:basis-2/3 basis-full justify-between">
                <span class="text-textgreen text-xs">
                    {post.data.date}
                </span>
                <h2 class="text-title text-xl line-clamp-2 text-left">
                    {post.data.title}
                </h2>
                <p class="text-xs pt-1 text-textgrey pb-2 md:pb-0">{post.data.infos}</p>
                <div class="border-b-1 border-b-gray-400">
                    <CategoryList categories={post.data.categories} />
                </div>
            </div>
        </div>

    </a>

</div>