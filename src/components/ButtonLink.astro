---
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<"a">{
    href: string;
}
const { href, ...rest } = Astro.props 
--- 

<a href={href} {...rest} class="bg-border-divider py-2 px-5 mb-6 rounded-4xl text-2xl text-fond uppercase max-w-fit">
    <slot />
</a>