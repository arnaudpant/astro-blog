         <div class="flex justify-center mb-6">
			<SearchBar />
		</div>
        <h1 class="text-title text-xl md:text-3xl text-center pb-10 md:pb-6">R√©sultats pour: {query}</h1>
        <div class="flex flex-wrap justify-center gap-x-4 gap-y-8">
        {
            searchResult.length > 0 ? searchResult.map(article => (
                <PostPageBlog post={article} />
            )) : <p class="text-2xl md:text-4xl py-10">Aucun article trouv√©</p>
